@{

    Layout = null;
}
<div class="layui-card" style="width:350px">
    <div class="layui-card-header">主题设置</div>
    <div class="layui-card-body">
        <ul class="theme">
            <li theme="theme-black">
                <div style="height: 15px; background-color: #23262E; "></div>
                <div style="height: 50px; background-color: #f8f8f8">
                    <div style="height: 50px; width: 20px; background-color: #393D49; "></div>
                </div>
            </li>
            <li theme="theme-lightseagreen">
                <div style="height: 15px; background-color: #009688; "></div>
                <div style="height: 50px; background-color: #f8f8f8">
                    <div style="height: 50px; width: 20px; background-color: #393D49; "></div>
                </div>
            </li>
            <li theme="theme-dodgerblue">
                <div style="height: 15px; background-color: #1E9FFF; "></div>
                <div style="height: 50px; background-color: #f8f8f8">
                    <div style="height: 50px; width: 20px; background-color: #393D49; "></div>
                </div>
            </li>
            <li theme="theme-seagreen">
                <div style="height: 15px; background-color: #00a65a; ">
                    <div style="height: 50px; width: 20px; background-color: #008d4c; "></div>
                </div>
                <div style="height: 50px; background-color: #f8f8f8">
                    <div style="height: 50px; width: 20px; background-color: #fff; border-left: solid 1px #f8f8f8; border-bottom: solid 1px #f8f8f8; "></div>
                </div>
            </li>
        </ul>
    </div>
</div>

<script type="text/javascript">
    layui.use(['jquery'], function () {
        var $ = layui.$;
        $('.theme li[theme=' + $('body').attr('theme') + ']').addClass('active');
        $('.theme li').click(function () {
            var t = $('body').attr('theme');
            var theme = $(this).attr('theme');
            if (theme != t) {
                $('.theme li').removeClass('active');
                $(this).addClass('active');
                $('body').attr({ 'class': 'layui-layout-body ' + theme, 'theme': theme });
                document.cookie = "theme=" + $(this).attr('theme');
            }
        })
    })
</script>