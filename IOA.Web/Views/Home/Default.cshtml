
@{
    Layout = null;
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>系统管理-主页</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--加载css-->
    <link href="~/Scripts/layui-v2.6.7/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Scripts/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Scripts/base.css" rel="stylesheet" />
</head>
<body class="layui-layout-body @ViewBag.Theme" theme="@ViewBag.Theme">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">物联网+协同办公云平台</div>
            <div class="layui-flex"><a href="javascript:" title="折叠左侧菜单"><i class="layui-icon layui-icon-shrink-right"></i></a></div>
            <ul class="layui-nav layui-layout-left header-nav" lay-filter="left-nav">
                @Html.Raw(ViewBag.TopMenu)
            </ul>
            <ul class="layui-nav layui-layout-right" lay-filter="right-nav">
                <li class="weather">
                    <div id="tp-weather-widget"></div>
                </li>
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="/Content/images/hd.jpg" class="layui-nav-img" />
                        @ViewBag.UserName
                    </a>
                    <dl class="layui-nav-child">
                        <dd lay-unselect><a href="javascript:;" lay-event="userInfo">个人资料</a></dd>
                        <dd lay-unselect><a href="javascript:;" lay-event="updatePwd">修改密码</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item" lay-unselect><a href="javascript:;" lay-event="logout"><i class="fa fa-sign-out"></i>&nbsp;退出</a></li>
                <li class="layui-nav-item layui-nav-item-last" lay-unselect><a href="javascript:;" lay-event="theme" title="设置主题"><i class="layui-icon layui-icon-more-vertical"></i></a></li>
            </ul>
        </div>
        <div class="layui-side">
            <div class="layui-side-scroll">
                <ul id="menu" class="layui-nav layui-nav-tree" lay-filter="menu">
                    <li class="layui-nav-item layui-this">
                        <a href="/Home/Default">
                            <i class="layui-icon layui-icon-app"></i><cite>&nbsp;控制台</cite>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="layui-body main-body">
            <div class="current-location">
                <span>当前位置：</span>
                <span>控制台</span>
            </div>
            <div style="padding:10px">
                <div class="layui-card">
                    <div class="layui-card-header">数据统计</div>
                    <div class="layui-card-body">
                        <ul class="layui-row layui-col-space10 layui-this">
                            <li class="layui-col-md2">
                                <a href="#" class="backlog-body">
                                    <h3>用户总数</h3>
                                    <p><cite>126</cite></p>
                                </a>
                            </li>
                            <li class="layui-col-md2">
                                <a href="#" class="backlog-body">
                                    <h3>文章总数</h3>
                                    <p><cite>66</cite></p>
                                </a>
                            </li>
                            <li class="layui-col-md2">
                                <a href="#" class="backlog-body">
                                    <h3>订单数量</h3>
                                    <p><cite>100</cite></p>
                                </a>
                            </li>
                            <li class="layui-col-md2">
                                <a href="#" class="backlog-body">
                                    <h3>待审订单</h3>
                                    <p><cite>66</cite></p>
                                </a>
                            </li>
                            <li class="layui-col-md2">
                                <a href="#" class="backlog-body">
                                    <h3>待办任务</h3>
                                    <p><cite>66</cite></p>
                                </a>
                            </li>
                            <li class="layui-col-md2">
                                <a href="#" class="backlog-body">
                                    <h3>其他事项</h3>
                                    <p><cite>66</cite></p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="layui-card">
                    <div class="layui-card-header">版本信息</div>
                    <div class="layui-card-body" style="line-height:35px">
                        <p>当前版本：V2.0.3</p>
                        <p>更新日期：2019-03-20</p>
                    </div>
                </div>
                <div class="layui-row layui-col-space15">
                    <div class="layui-col-md6">
                        <div class="layui-card">
                            <div class="layui-card-header">流量统计</div>
                            <div class="layui-card-body">
                                <div id="chart1" style="width:100%;height:280px"></div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-md6">
                        <div class="layui-card">
                            <div class="layui-card-header">订单统计</div>
                            <div class="layui-card-body" style="line-height:35px">
                                <div id="chart2" style="width:100%;height:280px"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/layui-v2.6.7/layui/layui.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/Page/default.js"></script>
    <script src="~/Scripts/echarts.min.js"></script>
</body>
</html>
